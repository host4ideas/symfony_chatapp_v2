{% extends 'base.html.twig' %}

{% block title %}Send Message!!
{% endblock %}

{% block body %}

	<nav>
		<a href=" {{ path('outbox') }} ">Outbox</a>
		<a href=" {{ path('inbox') }} ">Inbox</a>
		<a href=" {{ path('profile') }} ">Profile</a>
		<a href=" {{ path('app_logout') }} ">Logout</a>
	</nav>

	{% if errors %}
		<ul style='list-style-type: none; margin: 10px; padding: 10px; border-top: 1px solid rgba(218, 51, 10, 0.6); border-bottom: 1px solid rgba(218, 51, 10, 0.6); width: fit-content;'>
			{% for error in errors %}
				<li>{{ error }}</li>
			{% endfor %}
		</ul>
	{% endif %}

	<div>
		<h1>Send Message</h1>

		<form method="post" novalidate enctype="multipart/form-data">
			<div style="margin: 10px">
				<label for="username">To:</label>
				<p><input type="text" id="username" name="username" list="contacts" placeholder="" value="{{ email }}" required></p>
			</div>
			<div style="margin: 10px">
				<label for="message">Message:</label>
				<div>
					<textarea type="text" id="message" name="message" placeholder="New message" value="" required></textarea>
				</div>
			</div>
			<div>
				<button type="submit">Send</button>
			</div>
		</form>
	</div>
{% endblock %}
