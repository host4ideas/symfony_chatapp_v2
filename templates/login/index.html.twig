{% extends 'base.html.twig' %}

{% block title %}
	Login
{% endblock %}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}
		</div>
	{% endif %}

	<div>
		<h1>Login</h1>
		<form action="{{ path('login') }}" method="post">
			<label for="username">Email:
			</label>
			<input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="name@example.com"/>

			<label for="password">Password:
			</label>
			<input type="password" id="password" name="_password"/>

			<div class="d-flex">
				<button type="submit">Login</button>
				<a href="{{ path('app_register') }}">Signup</a>
				<a href="{{ path('app_forgot_password_request') }}">Recover password</a>
			</div>
		</form>
	</div>


{% endblock %}
